# Apache redirect rules for anoopkurup.com
# These handle URL migrations from WordPress to Hugo

# Legal pages
Redirect 301 /privacy-policy/ /legal/privacy-policy/
Redirect 301 /terms-and-conditions/ /legal/terms-conditions/
Redirect 301 /refund-return-policy/ /legal/terms-conditions/

# Blog redirects
Redirect 301 /blog-2/ /blog/
Redirect 301 /category/blog/ /blog/
Redirect 301 /do-followers-on-social-media-translate-into-future-clients/ /blog/

# Workshop and service redirects
Redirect 301 /lead-generation-strategy-workshop/ /workshops/ai-lead-machine/
Redirect 301 /linkedin-marketing/ /ai-solutions/linkedin-content/
Redirect 301 /linkedin-thoughtleadership/ /ai-solutions/linkedin-content/
Redirect 301 /content-factory-creators-membership/ /workshops/
Redirect 301 /find-your-tg/ /consulting/

# Category and taxonomy redirects
Redirect 301 /docs-category/getting-started/ /workshops/
Redirect 301 /docs-category/configurations/ /ai-solutions/
Redirect 301 /docs-category/linkedin/ /ai-solutions/linkedin-content/
Redirect 301 /docs-category/audio/ /podcast/
Redirect 301 /docs-category/idea-generation/ /ai-solutions/
Redirect 301 /docs-category/misc/ /blog/

# Author pages
RedirectMatch 301 ^/author/(.*)$ /about/

# Thank you pages
Redirect 301 /thank-you-for-subscribing/ /thank-you/?type=newsletter
Redirect 301 /thank-you-linkedin/ /thank-you/?type=linkedin
Redirect 301 /thank-you-membership-content-factory-creators/ /thank-you/?type=membership
Redirect 301 /thank-you-getting-started-with-linkedin/ /thank-you/?type=guide
Redirect 301 /thank-you-for-subscribing-to-the-newsletter/ /thank-you/?type=newsletter
Redirect 301 /thank-you-lead-gen-workshop/ /thank-you/?type=workshop
Redirect 301 /thank-you-for-filling-the-form/ /thank-you/?type=form
Redirect 301 /thank-you-linkedin-thought-leadership/ /thank-you/?type=leadership

# WordPress specific redirects
RedirectMatch 301 ^/wp-sitemap(.*)\.xml$ /sitemap.xml
RedirectMatch 301 ^/wp-content/(.*)$ /
RedirectMatch 301 ^/wp-admin/(.*)$ /
RedirectMatch 301 ^/wp-(.*)$ /

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Cache headers
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>